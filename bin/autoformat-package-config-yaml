""" Formats only the package-config YAML files.

"""

import os
import sys

from nuitka.tools.quality.auto_format.AutoFormat import (
    _cleanupTrailingWhitespace,
    cleanupWindowsNewlines,
)
from nuitka.tools.quality.auto_format.YamlFormatter import formatYaml

# Unchanged, running from checkout, use the parent directory, the nuitka
# package ought to be there.
sys.path.insert(0, os.path.normpath(os.path.join(os.path.dirname(__file__), "..")))


CONFIG_PATH = os.path.join(
    os.path.dirname(__file__), "..", "nuitka", "plugins", "standard"
)
for filename in os.listdir(CONFIG_PATH):
    if filename.endswith(".nuitka-package.config.yml"):
        full_path = os.path.join(CONFIG_PATH, filename)
        formatYaml(full_path)
        cleanupWindowsNewlines(full_path)
        _cleanupTrailingWhitespace(full_path)
